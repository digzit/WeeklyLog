{
  "manifest_version": 3,
  "name": "WeeklyLog",
  "version": "1.0.0",
  "description": "Simple application to log time in intervals on a weekly view as a Chrome extension",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
